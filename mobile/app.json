{
  "expo": {
    "name": "Soulmate",
    "slug": "soulmate-ai",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f0f1a"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.soulmate.ai",
      "bitcode": false,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Soulmate needs access to your microphone for voice conversations",
        "NSCameraUsageDescription": "Soulmate needs access to your camera for video calls",
        "UIBackgroundModes": ["audio", "voip"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0f0f1a"
      },
      "package": "com.soulmate.ai",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.CAMERA"
      ],
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-dev-client",
      [
        "@livekit/react-native-expo-plugin",
        {
          "android": {
            "audioType": "communication"
          }
        }
      ],
            [
        "expo-av",
        {
          "microphonePermission": "Allow Soulmate to access your microphone for voice conversations"
        }
      ]
    ]
  }
}
